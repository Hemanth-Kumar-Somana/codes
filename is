#include <stdio.h>
#include <string.h>
#include <openssl/rsa.h>
#include <openssl/pem.h>
#include <openssl/evp.h>
#include <openssl/md5.h>
#include <openssl/bio.h>
#include <openssl/buffer.h>

char* base64_encode(const unsigned char* buffer, size_t length) {
    BIO *bio, *b64;
    BUF_MEM *bufferPtr;
    b64 = BIO_new(BIO_f_base64());
    bio = BIO_new(BIO_s_mem());
    bio = BIO_push(b64, bio);
    BIO_set_flags(bio, BIO_FLAGS_BASE64_NO_NL);
    BIO_write(bio, buffer, length);
    BIO_flush(bio);
    BIO_get_mem_ptr(bio, &bufferPtr);
    char* b64text = (char*)malloc(bufferPtr->length + 1);
    memcpy(b64text, bufferPtr->data, bufferPtr->length);
    b64text[bufferPtr->length] = 0;
    BIO_free_all(bio);
    return b64text;
}

int main() {
    EVP_PKEY *pkey;
    EVP_MD_CTX *ctx;
    RSA *rsa;
    unsigned char signature[256];
    size_t sig_len;
    char *encoded;
    char data[] = "Sample Text";

    pkey = EVP_PKEY_new();
    rsa = RSA_generate_key(1024, 65537, NULL, NULL);
    EVP_PKEY_assign_RSA(pkey, rsa);

    ctx = EVP_MD_CTX_new();
    EVP_SignInit(ctx, EVP_md5());
    EVP_SignUpdate(ctx, data, strlen(data));
    EVP_SignFinal(ctx, signature, (unsigned int*)&sig_len, pkey);

    encoded = base64_encode(signature, sig_len);

    printf("Signature:\n%s\n", encoded);

    EVP_VerifyInit(ctx, EVP_md5());
    EVP_VerifyUpdate(ctx, data, strlen(data));
    int verify = EVP_VerifyFinal(ctx, signature, sig_len, pkey);

    printf("%s\n", verify == 1 ? "true" : "false");

    free(encoded);
    EVP_MD_CTX_free(ctx);
    EVP_PKEY_free(pkey);

    return 0;
}



#include <stdio.h>
#include <stdint.h>
#include <string.h>

// fast modular exponentiation (supports up to 64-bit modulus)
uint64_t modexp(uint64_t a, uint64_t e, uint64_t m){
    unsigned __int128 res = 1;
    unsigned __int128 base = a % m;
    while(e){
        if(e & 1) res = (res * base) % m;
        base = (base * base) % m;
        e >>= 1;
    }
    return (uint64_t)res;
}

// extended gcd -> returns gcd and computes x,y such that ax+by=g
uint64_t egcd(uint64_t a, uint64_t b, int64_t *x, int64_t *y){
    if(b==0){ *x = 1; *y = 0; return a; }
    int64_t x1,y1;
    uint64_t g = egcd(b, a % b, &x1, &y1);
    *x = y1;
    *y = x1 - (a / b) * y1;
    return g;
}

// modular inverse of a mod m (assumes inverse exists)
uint64_t modinv(uint64_t a, uint64_t m){
    int64_t x,y;
    uint64_t g = egcd(a, m, &x, &y);
    if(g != 1) return 0; // no inverse
    int64_t res = x % (int64_t)m;
    if(res < 0) res += m;
    return (uint64_t)res;
}

// very small/fast educational hash (not cryptographic)
uint64_t simple_hash(const char *s, uint64_t mod){
    uint64_t h = 0;
    while(*s){
        h = (h * 131 + (unsigned char)(*s++)) % mod;
    }
    return h;
}

int main(){
    // Small primes (for demo only). n fits in 64-bit.
    const uint64_t p = 10007, q = 10009;
    uint64_t n = p * q;                  // modulus
    uint64_t phi = (p-1) * (q-1);        // phi(n)
    uint64_t e = 65537;                  // public exponent (common choice)
    uint64_t d = modinv(e, phi);         // private exponent

    if(d == 0){
        printf("Failed to compute modular inverse; pick different primes.\n");
        return 1;
    }

    char message[1024];
    printf("Enter message (Information Security subject):\n");
    if(!fgets(message, sizeof message, stdin)) return 0;
    // remove newline
    size_t L = strlen(message);
    if(L && message[L-1] == '\n') message[L-1] = '\0';

    uint64_t h = simple_hash(message, n);           // hash of message (mod n)
    uint64_t signature = modexp(h, d, n);           // sign: h^d mod n
    uint64_t verify = modexp(signature, e, n);      // verify: sig^e mod n

    printf("\nPublic key (n, e):\n%llu\n%llu\n", (unsigned long long)n, (unsigned long long)e);
    printf("Private key d (keep secret):\n%llu\n", (unsigned long long)d);
    printf("\nMessage: %s\n", message);
    printf("Hash (mod n): %llu\n", (unsigned long long)h);
    printf("Signature (number): %llu\n", (unsigned long long)signature);

    if(verify == h) printf("Verification: SUCCESS (sig^e mod n == hash)\n");
    else printf("Verification: FAILURE\n");

    return 0;
}

Enter message (Information Security subject):
hello

Public key (n, e):
